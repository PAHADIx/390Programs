	}
	int pushArray(int[][], int num){
		
	}
	
	int getPositionValue(int num, int pos){
		String number = Integer.toString(num);
		char atPos = number.charAt(number.length() - pos);
		return Character.getNumericValue(atPos);
		
	}
	
	
}
