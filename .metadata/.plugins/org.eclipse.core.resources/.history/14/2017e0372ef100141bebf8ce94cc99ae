
public class Main {

	public static void main(String[] args) {
		
	}
	
	public int factorial(int num){
		int product = 1;
		while(num > 0){
			product *= num;
			num--;
		}
		return num;
	}
	
	public int factorialRec(int num){
		if(num <= 1){
			return 1;
		} else {
			return num*factorialRec(num-1);
		}
	}
	
	public int sum(int num){
		int sum = 0;
		while(sum > 0){
			sum += num;
			num--;
		}
		return num;
	}

	public int sumRec(int num){
		if(num <= 0){
			return 0;
		} else {
			return num + sum(num-1);
		}
	}
	
}
